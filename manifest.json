{
  "manifest_version": 2,

  "name": "Search Mode",
  "description": "Clutter-free search mode.",
  "version": "1.0",

  "author": "Xavier Ho",

  "commands": {
    "toggle-search-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Toggle search mode on and off"
    }
  },

  "page_action": {
    "default_icon": {
      "19": "button19px.png",
      "38": "button38px.png"
    },
    "default_title": "Search Mode is ON"
  },

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["search-mode.css"],
      "js": ["search-mode.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ]
}
