{
  "manifest_version": 2,

  "name": "Find with Sam",
  "description": "Do you use a screen reader to search academic literature? Find with Sam to save you time!",
  "version": "1.0",

  "author": "Xavier Ho",

  "commands": {
    "toggle-findwithsam": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle Find with Sam on or off."
    }
  },

  "page_action": {
    "default_icon": {
      "19": "images/button19px.png",
      "38": "images/button38px.png"
    },
    "default_title": "Find with Sam is ON."
  },

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["findwithsam.css"],
      "js": ["findwithsam.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ]
}
